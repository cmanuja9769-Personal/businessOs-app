{
  "name": "businessos",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "author": "BusinessOS Team",
  "description": "Professional Business Management Software - Inventory, Billing & Customer Management",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:electron": "next build && node scripts/post-build.js",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:win": "npm run build:electron && electron-builder --win",
    "electron:build:mac": "npm run build:electron && electron-builder --mac",
    "electron:build:linux": "npm run build:electron && electron-builder --linux",
    "type-check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "lint-staged": {
  "*.{ts,tsx}": [
    "bash -c 'tsc --noEmit'",
    "next lint"
  ]
},
